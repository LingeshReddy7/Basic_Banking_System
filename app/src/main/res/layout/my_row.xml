<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:background="#D5E3EF">


        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageview"
            app:cardCornerRadius="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:id="@+id/imagev1"
                app:srcCompat="@drawable/ic_baseline_account_circle_24">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Reddys"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/imageview"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/user_name_txt">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Bukkapatnam"
            android:textColor="#7CAABF"
            android:textSize="15sp"
            android:layout_below="@+id/user_name_txt"
            android:layout_toRightOf="@+id/imageview"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/user_branch_txt">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Rs."
            android:textSize="20sp"
            android:textColor="#0C0C0C"
            android:layout_toRightOf="@+id/user_name_txt"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/rs">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="70000/-"
            android:textSize="20sp"
            android:textColor="#0C0C0C"
            android:layout_toRightOf="@+id/rs"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/user_amount_txt">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Amount"
            android:textSize="15sp"
            android:textColor="#0F0C10"
            android:layout_toRightOf="@+id/user_name_txt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/total">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Amount"
            android:textSize="15sp"
            android:textColor="#151315"
            android:layout_toRightOf="@+id/user_name_txt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/blank1">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Amount"
            android:textSize="15sp"
            android:textColor="#9D1DB3"
            android:layout_toRightOf="@+id/user_name_txt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/blank2">

        </TextView>


    </RelativeLayout>
</RelativeLayout>
