<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".userData">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="72dp"
        android:text="User Details"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="3dp"
        android:text="______________________________________"
        android:textColor="#8D8B91"
        android:textSize="20sp"
         />
    <TextView
        android:id="@+id/name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="65dp"
        android:text="Name    :"
        android:textColor="#111212"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/name"
        android:layout_marginTop="62dp"
        android:text="Rahul"
        android:textAllCaps="true"
        android:id="@+id/gname"
        android:textSize="35sp"
        android:textColor="#1536ED"
        />

    <TextView
        android:id="@+id/acno"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gname"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:text="Ac No    :"
        android:textColor="#0E0E0E"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gacno"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/gname"
        android:layout_toRightOf="@+id/acno"
        android:layout_marginTop="40dp"
        android:text="1111111111"
        android:textSize="30sp"
        android:textColor="#636D71"
        />

    <TextView
        android:id="@+id/branch"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gacno"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:text="Branch   :"
        android:textColor="#0E0E0E"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/gacno"
        android:layout_toRightOf="@+id/branch"
        android:layout_marginTop="34dp"
        android:id="@+id/gbranch"
        android:text="Bukkapatnam"
        android:textSize="30sp"
        android:textColor="#0B6C91"
        />


    <TextView
        android:id="@+id/amount"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gbranch"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="39dp"
        android:text="Amount  :"
        android:textColor="#0E0E0E"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/gbranch"
        android:layout_toRightOf="@+id/amount"
        android:layout_marginTop="34dp"
        android:text="0.0"
        android:id="@+id/gamount"
        android:textSize="35sp"
        android:textColor="#DC2C1F"
        />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/gamount"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="200dp"
            android:backgroundTint="#C0F1EC"
            android:text="Make Payment"
            android:textSize="20sp" />

    </RelativeLayout>

</ScrollView>