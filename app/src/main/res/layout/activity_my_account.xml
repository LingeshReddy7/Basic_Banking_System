<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".My_account">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/id"
            android:text=""/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bal"
            android:text=""/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtn"
            android:text="Name"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="#060707"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_name"
            android:text="Your_name"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/txtn"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textColor="#060707"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/txta"
            android:text="Ac.No"
            android:textSize="25sp"
           android:layout_below="@+id/txtn"
            android:layout_marginLeft="30dp"
            android:textColor="#0C0C0C"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_acno"
            android:text="Your_Ac.No"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/txta"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="30dp"
            android:textColor="#0C0C0C"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtb"
            android:text="Bank"
            android:textSize="25sp"
            android:layout_below="@+id/txta"
            android:layout_marginLeft="30dp"
            android:textColor="#0C0C0C"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_bank"
            android:text="Your_Bank"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/txtb"
            android:layout_below="@+id/txt_acno"
            android:layout_marginLeft="30dp"
            android:textColor="#0C0C0C"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Check Balance"
            android:layout_marginTop="30dp"
            android:id="@+id/check"
            android:textColor="#0A2DF3"
            android:textSize="15sp"
            android:textStyle="italic"
            android:backgroundTint="#C1F1EC"
           android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtb"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_balance"
            android:text=""
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/check"
            android:layout_below="@+id/txt_bank"
            android:layout_marginLeft="20dp"
            android:textColor="#0C0C0C"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_below="@+id/check"
            android:textSize="20sp"
            android:id="@+id/ed1"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account Number"
            android:layout_below="@+id/ed1"
            android:textSize="20sp"
            android:inputType="number"
            android:id="@+id/ed2"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bank Name"
            android:layout_below="@+id/ed2"
            android:id="@+id/ed3"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Money"
            android:layout_below="@+id/ed3"
            android:id="@+id/ed4"
            android:inputType="number"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/add"
            android:layout_below="@+id/ed4"
            android:layout_marginTop="40dp"
            android:text="Update Details"
            android:visibility="visible"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#D4F1EE"
            android:textSize="25sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/add2"
            android:layout_below="@+id/ed4"
            android:layout_marginTop="35dp"
            android:text="ADD"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#D6F1EE"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/add"
            android:hint="Enter Amount"
            android:textSize="20sp"
            android:inputType="number"
            android:layout_marginTop="100dp"
            android:id="@+id/amount_added"
            android:visibility="gone"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/amount_added"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#D0EFEC"
            android:text="Add Money"
            android:textStyle="bold"
            android:visibility="visible"
            android:textSize="25sp"
            android:id="@+id/add_money"
            android:layout_marginBottom="50dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/amount_added"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#D2EFEC"
            android:text="Add Money"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:visibility="gone"
            android:id="@+id/add_money2"
            android:layout_marginBottom="50dp"
            />

    </RelativeLayout>

</ScrollView>